{
  "name": "x-markdown",
  "version": "1.0.0",
  "description": "A markdown component library for Vue",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./style": "./dist/style.css"
